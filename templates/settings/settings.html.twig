{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header text-center bg-primary text-white">
                        <h2>Paramètres</h2>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Nom</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="John Doe" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Adresse mail</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" value="john.doe@example.com" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Mot de passe</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" value="********" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Préférences</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="Thème sombre, Notifications activées" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Cours inscrits</label>
                            <div class="col-sm-8">
                                <ul class="list-group">
                                    <li class="list-group-item">Cours de Mathématiques</li>
                                    <li class="list-group-item">Cours d'Informatique</li>
                                    <li class="list-group-item">Cours de Physique</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Classe</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="Terminale S" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Type d'utilisateur</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="Étudiant" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" disabled>Modifier</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
