{% block stylesheets %}
    <style>
        /* =========================== */
        /* BODY Reset */
        /* =========================== */
        body {
            margin: 0;
            padding: 0;
        }

        html, body {
            overflow: auto;
        }

        /* =========================== */
        /* NAVBAR Container */
        /* =========================== */
        .button-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            padding: 0 20px;
            border-radius: 0 0 12px 12px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.35);
            z-index: 1000;
            animation: fadeInOnly 0.8s ease-in-out;
            transition: background-color 0.5s ease;
        }

        /* Fond clair pour utilisateurs normaux */
        .user-navbar {
            background-color: #42a5f5; /* Bleu clair */
        }

        /* Fond foncé pour administrateurs */
        .admin-navbar {
            background-color: #0A2240; /* Bleu très foncé */
        }

        /* Animation Fade In */
        @keyframes fadeInOnly {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        /* =========================== */
        /* Bubble Buttons */
        /* =========================== */
        .bubble-button {
            position: relative;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 150px;
            height: 50px;
            appearance: none;
            background: transparent;
            border: none;
            color: #ffffff;
            font-family: 'Comic Neue', cursive, sans-serif;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            overflow: hidden;
            padding: 0;
            text-decoration: none;
            transition: filter 0.3s ease;
        }

        .bubble-button:hover {
            filter: brightness(1.1);
        }

        .bubble-button:active {
            filter: brightness(0.9);
        }

        .bubble-button > span {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px; /* espace entre l'icône et le texte */
            position: relative;
            z-index: 2;
            transition: transform 0.3s cubic-bezier(0.68, -0.6, 0.32, 1.6);
        }

        .bubble-button:hover > span {
            transform: scale(1.05);
        }

        .bubble-button:active > span {
            transform: scale(0.95);
        }

        .bubble-button > svg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            fill: #1976d2;
            z-index: 1;
            pointer-events: none;
        }

        .bubble-button > svg > path {
            transition: d 0.3s cubic-bezier(0.68, -0.6, 0.32, 1.6);
        }

        .bubble-button:hover > svg > path {
            d: path("M0,0 C0,-5 100,-5 100,0 C105,0 105,100 100,100 C100,105 0,105 0,100 C-5,100 -5,0 0,0");
        }

        .bubble-button:active > svg > path {
            d: path("M0,0 C30,10 70,10 100,0 C95,30 95,70 100,100 C70,90 30,90 0,100 C5,70 5,30 0,0");
        }
    </style>
{% endblock %}

