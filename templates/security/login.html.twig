{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 400px;">
        <h1 class="mb-4 text-center">Connexion</h1>

        {# Message d'erreur facultatif, Ã  conserver ou supprimer selon vos besoins #}
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="d-flex justify-content-center">
            <a href="{{ path('app_menu') }}" class="btn btn-primary">Se connecter</a>
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_register') }}" class="btn btn-link">S'inscrire</a>
        </div>
    </div>
{% endblock %}
